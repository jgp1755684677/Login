                    <input type="email" class="form-control" name="email" id="email" placeholder="请输入Email" required>
                </div>    
            </div>
            <div class="form-group">
                <div class="col-xs-offset-5">
                    <button type="submit" class="btn btn-info btn-lg">提交</button>
